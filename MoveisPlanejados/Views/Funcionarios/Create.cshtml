@model MoveisPlanejados.Models.Funcionario

@{
    ViewData["Title"] = "Create";
}

<h1>Criar Funcionario</h1>

<h4>Funcionario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome_Funcionario" class="control-label"></label>
                <input asp-for="Nome_Funcionario" class="form-control" />
                <span asp-validation-for="Nome_Funcionario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status_Funcionario" class="control-label"></label>
                <select asp-for="Status_Funcionario" class="form-control" > 
                    <option value="Disponivel">Disponivel</option>   
                    <option value="Indisponivel">Indisponivel</option>                    
                </select>
                <span asp-validation-for="Status_Funcionario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
                <br> <br> <a asp-controller="Funcionarios" asp-action="Index" class="btn btn-secondary">Voltar para Lista</a>
</div>

