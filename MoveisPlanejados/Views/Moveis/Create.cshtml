@model MoveisPlanejados.Models.Movel

@{
    ViewData["Title"] = "Create";
}
  
<h1>Criar Movel</h1>

<h4>Movel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome_Cliente" class="control-label">Nome do Cliente:</label>
                <input asp-for="Nome_Cliente" class="form-control" />
                <span asp-validation-for="Nome_Cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome_Movel" class="control-label">Nome do Movel:</label>
                <input asp-for="Nome_Movel" class="form-control" />
                <span asp-validation-for="Nome_Movel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cor_Movel" class="control-label">Cor do Movel:</label>
                <input asp-for="Cor_Movel" class="form-control" />
                <span asp-validation-for="Cor_Movel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Medidas_Movel" class="control-label">Medidas do Movel: </label>
                <input asp-for="Medidas_Movel" class="form-control" />
                <span asp-validation-for="Medidas_Movel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Material_Movel" class="control-label">Material do Movel:</label>
                <input asp-for="Material_Movel" class="form-control" />
                <span asp-validation-for="Material_Movel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imagem_Movel" class="control-label">Link da Imagem do Movel:</label>
                <input asp-for="Imagem_Movel" class="form-control" />
                <span asp-validation-for="Imagem_Movel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuncionarioId" class="control-label">Funcionario da Analise:</label>
                <select asp-for="FuncionarioId" class ="form-control" asp-items="ViewBag.FuncionarioId">'</select>
            </div>
            <div class="form-group">
                <button type="submit" value="Create" class="btn btn-primary">
                    <select id="Status_Movel" name="Status_Movel" style="color: white; background: #1b6ec2;">
                        <option value="Movel Novo(Em Analise)">Solicitar Movel</option>
                    </select>    
                </button>           
            </div>
        </form>
    </div>
</div>


