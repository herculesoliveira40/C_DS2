<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Chocolateria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background-color: #4a1d1d2e">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-info border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-aresa="" asp-controller="Home" asp-action="Index">Chocolateria</a>


                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white btn-outline-danger" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white btn-outline-danger" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white btn-outline-danger" asp-area="" asp-controller="Chocolates" asp-action="Index">Chocolates</a>
                        </li>                         
                        <li class="nav-item">
                            <a class="nav-link text-white btn-outline-danger" asp-area="" asp-controller="Chocolates" asp-action="Gourmet">Chocolates Gourmet</a>
                        </li>                         
                        <li class="nav-item">
                            <a class="btn btn-outline-danger" asp-area="" asp-controller="Chocolates" asp-action="AreaRestrita" style="margin-left: 400px">Area Restrita</a>
                        </li>                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container ">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Chocolateria -  Rua Borboletas Psicodélicas (São Paulo, SP), (71) 4002-8922 <strong>   Ben10 &copy; <a asp-area="" asp-controller="Home" asp-action="Privacy">Politica de Cookies</a>

        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
