@model Chocolateria.Models.Chocolate

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Chocolate</h1>

<h4>Chocolate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_Chocolate" />
            <div class="form-group">
                <label asp-for="Valor_Chocolate" class="control-label"></label>
                <input asp-for="Valor_Chocolate" class="form-control" />
                <span asp-validation-for="Valor_Chocolate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade_Disponivel" class="control-label"></label>
                <input asp-for="Quantidade_Disponivel" class="form-control" />
                <span asp-validation-for="Quantidade_Disponivel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Peso_Chocolate" class="control-label"></label>
                <input asp-for="Peso_Chocolate" class="form-control" />
                <span asp-validation-for="Peso_Chocolate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Marca_Chocolate" class="control-label"></label>
                <input asp-for="Marca_Chocolate" class="form-control" />
                <span asp-validation-for="Marca_Chocolate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Porcentagem_Cacau" class="control-label"></label>
                <input asp-for="Porcentagem_Cacau" class="form-control" />
                <span asp-validation-for="Porcentagem_Cacau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo_Chocolate" class="control-label"></label>
                <input asp-for="Tipo_Chocolate" class="form-control" />
                <span asp-validation-for="Tipo_Chocolate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data_Validade" class="control-label"></label>
                <input asp-for="Data_Validade" class="form-control" />
                <span asp-validation-for="Data_Validade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cupom_Desconto" class="control-label"></label>
                <input asp-for="Cupom_Desconto" class="form-control" />
                <span asp-validation-for="Cupom_Desconto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success btn-lg" /> |
                <br> <br> <a asp-action="AreaRestrita" class="btn btn-secondary">Voltar a Lista</a>
            </div>
        </form>
    </div>
</div>



